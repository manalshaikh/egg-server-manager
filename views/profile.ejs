<%- include('partials/header') %>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card bg-secondary text-white">
            <div class="card-header">
                <h3>Profile Settings</h3>
            </div>
            <div class="card-body">
                <form action="/profile" method="POST">
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" class="form-control" id="username" value="<%= user.username %>" disabled>
                    </div>
                    <div class="mb-3">
                        <label for="ptero_url" class="form-label">Pterodactyl Panel URL</label>
                        <input type="url" class="form-control" id="ptero_url" name="ptero_url" value="<%= user.ptero_url || '' %>" placeholder="https://panel.example.com">
                        <div class="form-text text-light">The URL to your Pterodactyl panel.</div>
                    </div>
                    <div class="mb-3">
                        <label for="ptero_api_key" class="form-label">Pterodactyl API Key</label>
                        <input type="password" class="form-control" id="ptero_api_key" name="ptero_api_key" value="<%= user.ptero_api_key || '' %>" placeholder="ptlc_...">
                        <div class="form-text text-light">Your Client API Key from the Account API tab.</div>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>

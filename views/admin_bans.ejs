<%- include('partials/header') %>

<h2 class="mb-4">IP Ban Management</h2>

<div class="row mb-4">
    <div class="col-md-12">
        <div class="card bg-secondary text-white">
            <div class="card-header">
                <h4>Ban New IP</h4>
            </div>
            <div class="card-body">
                <form action="/admin/bans" method="POST" class="row g-3">
                    <div class="col-md-6">
                        <label for="ip" class="form-label">IP Address</label>
                        <input type="text" class="form-control" id="ip" name="ip" placeholder="192.168.1.1" required>
                    </div>
                    <div class="col-md-4">
                        <label for="reason" class="form-label">Reason</label>
                        <input type="text" class="form-control" id="reason" name="reason" placeholder="Manual ban">
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-danger w-100">Ban IP</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card bg-secondary text-white">
            <div class="card-header">
                <h4>Banned IPs</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-dark table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>IP Address</th>
                                <th>Reason</th>
                                <th>Expires At</th>
                                <th>Created At</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (bans.length === 0) { %>
                                <tr>
                                    <td colspan="6" class="text-center">No active bans found.</td>
                                </tr>
                            <% } else { %>
                                <% bans.forEach(ban => { %>
                                    <tr>
                                        <td><%= ban.id %></td>
                                        <td><%= ban.ip %></td>
                                        <td><%= ban.reason %></td>
                                        <td><%= ban.expiresAt ? new Date(ban.expiresAt).toLocaleString() : 'Permanent' %></td>
                                        <td><%= new Date(ban.createdAt).toLocaleString() %></td>
                                        <td>
                                            <form action="/admin/bans/delete" method="POST" class="d-inline">
                                                <input type="hidden" name="id" value="<%= ban.id %>">
                                                <button type="submit" class="btn btn-sm btn-success">Unban</button>
                                            </form>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>

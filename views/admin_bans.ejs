<%- include('partials/header') %>

<div class="d-flex align-items-center mb-4">
    <div class="rounded-circle bg-danger bg-opacity-10 p-3 me-3">
        <i class="fas fa-ban fa-2x text-danger"></i>
    </div>
    <div>
        <h2 class="fw-bold mb-0">IP Ban Management</h2>
        <p class="text-muted mb-0">Manage blocked IP addresses</p>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-12">
        <div class="card mb-4">
            <div class="card-header">
                <h4 class="mb-0"><i class="fas fa-shield-alt me-2 text-danger"></i> Ban New IP</h4>
            </div>
            <div class="card-body">
                <form action="/admin/bans" method="POST" class="row g-3 align-items-end">
                    <div class="col-md-6">
                        <label for="ip" class="form-label text-uppercase small fw-bold text-muted">IP Address</label>
                        <input type="text" class="form-control" id="ip" name="ip" placeholder="192.168.1.1" required>
                    </div>
                    <div class="col-md-4">
                        <label for="reason" class="form-label text-uppercase small fw-bold text-muted">Reason</label>
                        <input type="text" class="form-control" id="reason" name="reason" placeholder="Manual ban">
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-danger w-100">
                            <i class="fas fa-gavel me-2"></i> Ban IP
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0"><i class="fas fa-list me-2 text-info"></i> Banned IPs</h4>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-dark table-hover mb-0">
                        <thead>
                            <tr>
                                <th class="border-0 text-uppercase small fw-bold text-muted ps-4">ID</th>
                                <th class="border-0 text-uppercase small fw-bold text-muted">IP Address</th>
                                <th class="border-0 text-uppercase small fw-bold text-muted">Reason</th>
                                <th class="border-0 text-uppercase small fw-bold text-muted">Expires At</th>
                                <th class="border-0 text-uppercase small fw-bold text-muted">Created At</th>
                                <th class="border-0 text-uppercase small fw-bold text-muted pe-4">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (bans.length === 0) { %>
                                <tr>
                                    <td colspan="6" class="text-center">No active bans found.</td>
                                </tr>
                            <% } else { %>
                                <% bans.forEach(ban => { %>
                                    <tr>
                                        <td><%= ban.id %></td>
                                        <td><%= ban.ip %></td>
                                        <td><%= ban.reason %></td>
                                        <td><%= ban.expiresAt ? new Date(ban.expiresAt).toLocaleString() : 'Permanent' %></td>
                                        <td><%= new Date(ban.createdAt).toLocaleString() %></td>
                                        <td>
                                            <form action="/admin/bans/delete" method="POST" class="d-inline">
                                                <input type="hidden" name="id" value="<%= ban.id %>">
                                                <button type="submit" class="btn btn-sm btn-success">Unban</button>
                                            </form>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>

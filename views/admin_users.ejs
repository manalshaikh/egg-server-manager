<%- include('partials/header') %>

<div class="d-flex align-items-center mb-4">
    <div class="rounded-circle bg-primary bg-opacity-10 p-3 me-3">
        <i class="fas fa-users-cog fa-2x text-primary"></i>
    </div>
    <div>
        <h2 class="fw-bold mb-0">User Management</h2>
        <p class="text-muted mb-0">Create and manage system users</p>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-12">
        <div class="card mb-4">
            <div class="card-header">
                <h4 class="mb-0"><i class="fas fa-user-plus me-2 text-success"></i> Create New User</h4>
            </div>
            <div class="card-body">
                <form action="/admin/users" method="POST" class="row g-3 align-items-end">
                    <div class="col-md-4">
                        <label for="username" class="form-label text-uppercase small fw-bold text-muted">Username</label>
                        <input type="text" class="form-control" id="username" name="username" placeholder="Enter username" required>
                    </div>
                    <div class="col-md-4">
                        <label for="password" class="form-label text-uppercase small fw-bold text-muted">Password</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="Enter password" required>
                    </div>
                    <div class="col-md-2">
                        <label for="role" class="form-label text-uppercase small fw-bold text-muted">Role</label>
                        <select id="role" name="role" class="form-select">
                            <option value="user">User</option>
                            <option value="admin">Admin</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="fas fa-plus me-2"></i> Create
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0"><i class="fas fa-list me-2 text-info"></i> Existing Users</h4>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-dark table-hover mb-0">
                        <thead>
                            <tr>
                                <th class="border-0 text-uppercase small fw-bold text-muted ps-4">ID</th>
                                <th class="border-0 text-uppercase small fw-bold text-muted">Username</th>
                                <th class="border-0 text-uppercase small fw-bold text-muted">Role</th>
                                <th>Ptero URL</th>
                                <th>API Key Configured</th>
                                <th>Created At</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach(u => { %>
                                <tr>
                                    <td><%= u.id %></td>
                                    <td><%= u.username %></td>
                                    <td>
                                        <span class="badge <%= u.role === 'admin' ? 'bg-danger' : 'bg-primary' %>">
                                            <%= u.role %>
                                        </span>
                                    </td>
                                    <td><%= u.ptero_url || 'Not set' %></td>
                                    <td>
                                        <% if (u.ptero_api_key) { %>
                                            <span class="badge bg-success">Yes</span>
                                        <% } else { %>
                                            <span class="badge bg-warning text-dark">No</span>
                                        <% } %>
                                    </td>
                                    <td><%= new Date(u.createdAt).toLocaleDateString() %></td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>

<%- include('partials/header') %>

<div class="d-flex align-items-center mb-4">
    <div class="rounded-circle bg-warning bg-opacity-10 p-3 me-3">
        <i class="fas fa-save fa-2x text-warning"></i>
    </div>
    <div>
        <h2 class="fw-bold mb-0">Server Backups</h2>
        <p class="text-muted mb-0">Manage backups for server <%= serverId %></p>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0"><i class="fas fa-plus me-2 text-success"></i> Create New Backup</h4>
            </div>
            <div class="card-body">
                <form id="createBackupForm" class="row g-3 align-items-end">
                    <div class="col-md-8">
                        <label for="backupName" class="form-label text-uppercase small fw-bold text-muted">Backup Name</label>
                        <input type="text" class="form-control" id="backupName" placeholder="Enter backup name..." required>
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="fas fa-save me-2"></i> Create Backup
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0"><i class="fas fa-list me-2 text-info"></i> Existing Backups</h4>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-dark table-hover mb-0">
                        <thead>
                            <tr>
                                <th class="border-0 text-uppercase small fw-bold text-muted ps-4">Name</th>
                                <th class="border-0 text-uppercase small fw-bold text-muted">Size</th>
                                <th class="border-0 text-uppercase small fw-bold text-muted">Created</th>
                                <th class="border-0 text-uppercase small fw-bold text-muted">Status</th>
                                <th class="border-0 text-uppercase small fw-bold text-muted pe-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (backups.length === 0) { %>
                                <tr>
                                    <td colspan="5" class="text-center py-4 text-muted">No backups found.</td>
                                </tr>
                            <% } else { %>
                                <% backups.forEach(backup => { %>
                                    <tr>
                                        <td class="ps-4"><%= backup.name %></td>
                                        <td><%= backup.size ? (backup.size / 1024 / 1024).toFixed(2) + ' MB' : 'N/A' %></td>
                                        <td><%= new Date(backup.created_at).toLocaleString() %></td>
                                        <td>
                                            <span class="badge <%= backup.status === 'completed' ? 'bg-success' : backup.status === 'failed' ? 'bg-danger' : 'bg-warning' %>">
                                                <%= backup.status %>
                                            </span>
                                        </td>
                                        <td class="pe-4">
                                            <% if (backup.status === 'completed') { %>
                                                <button class="btn btn-sm btn-outline-danger delete-backup" data-uuid="<%= backup.uuid %>">
                                                    <i class="fas fa-trash"></i> Delete
                                                </button>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
$(document).ready(function() {
    $('#createBackupForm').submit(function(e) {
        e.preventDefault();
        const name = $('#backupName').val().trim();
        if (!name) return;

        const btn = $(this).find('button[type="submit"]');
        btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Creating...');

        $.ajax({
            url: `/api/server/<%= serverId %>/backups`,
            method: 'POST',
            contentType: 'application/json',
            data: JSON.stringify({ name: name, ownerId: <%= ownerId %> }),
            success: function(response) {
                if (response.success) {
                    alert('Backup creation started!');
                    location.reload();
                } else {
                    alert('Failed to create backup: ' + response.message);
                }
            },
            error: function() {
                alert('Error creating backup.');
            },
            complete: function() {
                btn.prop('disabled', false).html('<i class="fas fa-save me-2"></i> Create Backup');
            }
        });
    });

    $('.delete-backup').click(function() {
        const uuid = $(this).data('uuid');
        if (confirm('Are you sure you want to delete this backup?')) {
            $.ajax({
                url: `/api/server/<%= serverId %>/backups/${uuid}?ownerId=<%= ownerId %>`,
                method: 'DELETE',
                success: function(response) {
                    if (response.success) {
                        alert('Backup deleted!');
                        location.reload();
                    } else {
                        alert('Failed to delete backup: ' + response.message);
                    }
                },
                error: function() {
                    alert('Error deleting backup.');
                }
            });
        }
    });
});
</script>

<%- include('partials/footer') %>
<%- include('partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-5">
    <div>
        <h2 class="fw-bold mb-0">Server Dashboard</h2>
        <p class="text-muted mb-0">Manage and monitor your game servers</p>
    </div>
    <button class="btn btn-primary" onclick="location.reload()">
        <i class="fas fa-sync-alt me-2"></i> Refresh
    </button>
</div>

<div class="row g-4" id="server-list">
    <% if (servers.length === 0) { %>
        <div class="col-12">
            <div class="card text-center py-5">
                <div class="card-body">
                    <i class="fas fa-server fa-4x mb-3 text-muted" style="opacity: 0.3"></i>
                    <h3>No Servers Found</h3>
                    <p class="text-muted">Please configure your API keys in your Profile to get started.</p>
                    <a href="/profile" class="btn btn-primary mt-2">Go to Profile</a>
                </div>
            </div>
        </div>
    <% } else { %>
        <% servers.forEach(server => { %>
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 server-card" data-id="<%= server.id %>" data-owner="<%= server.ownerId %>">
                    <div class="card-header d-flex justify-content-between align-items-center border-0 pb-0">
                        <div class="d-flex align-items-center">
                            <div class="rounded-circle bg-primary bg-opacity-10 p-2 me-3">
                                <i class="fas fa-gamepad text-primary"></i>
                            </div>
                            <h5 class="card-title mb-0 text-truncate" style="max-width: 150px;" title="<%= server.name %>"><%= server.name %></h5>
                        </div>
                        <span class="badge bg-dark bg-opacity-50 border border-secondary border-opacity-25">
                            <i class="fas fa-user me-1"></i> <%= server.owner %>
                        </span>
                    </div>
                    <div class="card-body">
                        <div class="mb-4">
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted small text-uppercase fw-bold">IP Address</span>
                                <span class="font-monospace"><%= server.ip %>:<%= server.port %></span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-muted small text-uppercase fw-bold">Status</span>
                                <span class="server-status badge 
                                    <%= server.state === 'running' ? 'bg-success' : 
                                       server.state === 'offline' ? 'bg-danger' : 
                                       server.state === 'starting' ? 'bg-warning' : 'bg-info' %>">
                                    <%= server.state %>
                                </span>
                            </div>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <div class="btn-group w-100" role="group">
                                <button class="btn btn-success btn-action" data-action="start" <%= server.state === 'running' ? 'disabled' : '' %>>
                                    <i class="fas fa-play"></i>
                                </button>
                                <button class="btn btn-warning btn-action" data-action="restart">
                                    <i class="fas fa-redo"></i>
                                </button>
                                <button class="btn btn-danger btn-action" data-action="stop" <%= server.state === 'offline' ? 'disabled' : '' %>>
                                    <i class="fas fa-stop"></i>
                                </button>
                            </div>
                            <div class="btn-group w-100" role="group">
                                <button class="btn btn-info btn-sm" data-bs-toggle="modal" data-bs-target="#consoleModal" data-server-id="<%= server.id %>" data-owner-id="<%= server.ownerId %>">
                                    <i class="fas fa-list"></i> Logs
                                </button>
                                <a href="/server/<%= server.id %>/backups?ownerId=<%= server.ownerId %>" class="btn btn-secondary btn-sm">
                                    <i class="fas fa-save"></i> Backups
                                </a>
                                <a href="/server/<%= server.id %>/files?ownerId=<%= server.ownerId %>" class="btn btn-secondary btn-sm">
                                    <i class="fas fa-folder"></i> Files
                                </a>
                            </div>
                        </div>
                        <div class="text-center mt-3">
                            <small class="text-muted" style="font-size: 0.7rem;">UUID: <%= server.uuid.substring(0, 8) %></small>
                        </div>
                    </div>
                </div>
            </div>
        <% }); %>
    <% } %>
</div>

    </div>
</div>

<!-- Console Modal -->
<div class="modal fade" id="consoleModal" tabindex="-1" aria-labelledby="consoleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="consoleModalLabel">Server Logs</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <button type="button" class="btn btn-primary btn-sm" id="refreshLogsBtn">
                        <i class="fas fa-sync-alt me-2"></i> Refresh Logs
                    </button>
                </div>
                <div id="logsContainer" class="bg-dark text-light p-3 rounded" style="height: 400px; overflow-y: auto; font-family: 'Courier New', monospace; font-size: 0.85rem;">
                    <div class="text-center text-muted">
                        <i class="fas fa-spinner fa-spin me-2"></i> Loading logs...
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>

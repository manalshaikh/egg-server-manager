<%- include('partials/header') %>

<div class="d-flex align-items-center mb-4">
    <div class="rounded-circle bg-info bg-opacity-10 p-3 me-3">
        <i class="fas fa-history fa-2x text-info"></i>
    </div>
    <div>
        <h2 class="fw-bold mb-0">System Logs</h2>
        <p class="text-muted mb-0">View system activity and audit trails</p>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0"><i class="fas fa-clipboard-list me-2 text-primary"></i> Recent Activity</h4>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-dark table-hover mb-0">
                        <thead>
                            <tr>
                                <th class="border-0 text-uppercase small fw-bold text-muted ps-4">Timestamp</th>
                                <th class="border-0 text-uppercase small fw-bold text-muted">User</th>
                                <th class="border-0 text-uppercase small fw-bold text-muted">IP Address</th>
                                <th class="border-0 text-uppercase small fw-bold text-muted">Action</th>
                                <th class="border-0 text-uppercase small fw-bold text-muted pe-4">Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (logs.length === 0) { %>
                                <tr>
                                    <td colspan="5" class="text-center py-4 text-muted">No logs found.</td>
                                </tr>
                            <% } else { %>
                                <% logs.forEach(log => { %>
                                    <tr>
                                        <td class="ps-4"><%= new Date(log.timestamp).toLocaleString() %></td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="rounded-circle bg-secondary bg-opacity-25 p-1 me-2">
                                                    <i class="fas fa-user small"></i>
                                                </div>
                                                <%= log.username || 'N/A' %>
                                            </div>
                                        </td>
                                        <td class="font-monospace small"><%= log.ip %></td>
                                        <td>
                                            <span class="badge <%= log.action === 'login' ? 'bg-success' : 'bg-info' %>">
                                                <%= log.action %>
                                            </span>
                                        </td>
                                        <td class="pe-4"><%= log.details %></td>
                                    </tr>
                                <% }); %>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
